<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/newbg"
    tools:context=".BilanganActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp">

        <TextView
            android:background="@drawable/bg_shape2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganjil Genap dan Prima"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="22sp"
            android:padding="10dp"
            android:textColor="@color/putih" />

        <TextView
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Bilangan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="12dp"/>

        <EditText
            android:inputType="number"
            android:paddingLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/custom_input"
            android:hint="Masukkan Sembarang Bilangan"
            android:id="@+id/angka"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/putih"
            android:background="@drawable/custom_button"
            android:text="Proses"
            android:id="@+id/proses"/>

        <TextView
            android:gravity="center"
            android:id="@+id/bilangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/custom_input"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="18dp"
            android:text="Hasil"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/prima"/>

    </LinearLayout>
</LinearLayout>